{
  "manifest_version": 3,
  "name": "Cursor Visual Editor",
  "version": "1.0",
  "description": "Visual editor for Cursor - click any element to edit",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["http://localhost/*", "https://localhost/*"],
  "background": {
    "service_worker": "background.js"
  },
   "content_scripts": [
    {
      "matches": ["http://localhost/*", "http://127.0.0.1/*", "https://localhost/*"],
      "js": ["dist/contentScript.js"],
      "css": ["contentStyles.css"]
    }
  ]
}